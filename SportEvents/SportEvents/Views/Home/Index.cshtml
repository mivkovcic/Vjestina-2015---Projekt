                            <p style="color: whitesmoke">@item[i].Mjesto.Grad.naziv</p>
                            <p style="color: whitesmoke">@item[i].Mjesto.adresa</p>
                            <p style="color: whitesmoke">@item[i].datum</p>
                        </div>
                    </div>
                    <!--<div class="panel-footer"><a href="#"><span class="glyphicon glyphicon-shopping-cart"></span> Rezerviraj</a></div>-->
                </div>
            </a>
        }
    </div>
</div><br>




